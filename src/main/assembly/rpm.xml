<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">

	<id>assemble</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/live/services</directory>
			<outputDirectory>services</outputDirectory>
			<includes>
					<include>**/db/*</include>
				</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/live/modules</directory>
			<outputDirectory>modules</outputDirectory>
			<includes>
					<include>**/db/*</include>
				</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/live/core</directory>
			<outputDirectory>core</outputDirectory>
			<includes>
					<include>**/db/*</include>
				</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/live/Terradue.Corporate.WebServer</directory>
			<outputDirectory>sites/${deploy.site}/root</outputDirectory>
			<includes>
				<include>bin/**/*.dll</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/live/Terradue.Portal.Agent</directory>
			<outputDirectory>sites/${deploy.site}/root</outputDirectory>
			<includes>
				<include>bin/**/*.exe</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/live/Terradue.Portal.AdminTool</directory>
			<outputDirectory>sites/${deploy.site}/root</outputDirectory>
			<includes>
				<include>bin/**/*.exe</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/web-resources</directory>
			<filtered>true</filtered>
			<outputDirectory>sites/${deploy.site}</outputDirectory>
			<excludes>
				<exclude>root/scripts/libs/bootstrap/img/*</exclude>
				<exclude>root/scripts/libs/jquery.opensearchNavigator/img/*</exclude>
				<exclude>root/scripts/libs/jsonViewer/img/*</exclude>
				<exclude>root/scripts/libs/leaflet.draw/img/*</exclude>
				<exclude>root/scripts/modules/pages/img/*</exclude>
				<exclude>root/scripts/modules/processing/img/*</exclude>
				<exclude>root/styles/img/*</exclude>
				<exclude>root/scripts/libs/jquery-ui/images/*</exclude>
				<exclude>root/scripts/libs//bootstrap/img/*</exclude>
				<exclude>root/scripts/libs//jquery-ui/images/*</exclude>
				<exclude>root/scripts/libs//jsonViewer/img/*</exclude>
				<exclude>root/scripts/libs//leaflet.draw/img/*</exclude>
				<exclude>root/scripts/libs//jquery.loadmask/*</exclude>
				<exclude>root/scripts/libs//tumbax/*</exclude>
				<exclude>root/scripts/libs//font-awesome/font/*</exclude>
				<exclude>root/scripts/libs/font-awesome-4.1.0/fonts/*</exclude>
				<exclude>root/styles/fonts/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/web-resources</directory>
			<outputDirectory>sites/${deploy.site}</outputDirectory>
			<includes>
				<include>root/scripts/libs/bootstrap/img/*</include>
				<include>root/scripts/libs/jquery.opensearchNavigator/img/*</include>
				<include>root/scripts/libs/jsonViewer/img/*</include>
				<include>root/scripts/libs/leaflet.draw/img/*</include>
				<include>root/scripts/modules/pages/img/*</include>
				<include>root/scripts/modules/processing/img/*</include>
				<include>root/styles/img/*</include>
				<include>root/scripts/libs/jquery-ui/images/*</include>
				<include>root/scripts/libs//bootstrap/img/*</include>
				<include>root/scripts/libs//jquery-ui/images/*</include>
				<include>root/scripts/libs//jsonViewer/img/*</include>
				<include>root/scripts/libs//leaflet.draw/img/*</include>
				<include>root/scripts/libs//jquery.loadmask/*</include>
				<include>root/scripts/libs//tumbax/*</include>
				<include>root/scripts/libs//font-awesome/font/*</include>
				<include>root/scripts/libs/font-awesome-4.1.0/fonts/*</include>
				<include>root/styles/fonts/*</include>
			</includes>
		</fileSet>
	</fileSets>

</assembly>

