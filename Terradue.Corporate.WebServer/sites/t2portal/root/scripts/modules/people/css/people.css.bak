.teamup {
  color: #ffffff;
  padding: 50px 0;
  display: table;
  height: 300px;
  width: 100%;
  background-color: #0a5175;  /* deep blue */
  /* background: url(../scripts/modules/pages/img/eo-images/i3-SPOT5-Phytoplankton-Bloom.jpg) no-repeat center center fixed; */
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.approach {
  padding: 20px 20px;
  color: #ffffff;
  height: 80px;
  background: url(../img/separators/shapes.jpg) no-repeat center center fixed;
  background-attachment: inherit;
}

.peopleList>div{
	background: white;
	margin-bottom: 25px;
	font-size: 20px;
	padding-left: 20px;
}
.peopleList>div>p {
	display: inline-block;
	margin-left: 20px;
}
.peopleList>div>img {
	margin-right: 20px;
}


.members {
    list-style: none;
    margin-left: 0px;
    width: 100%;
    height: 100%;
}

.peopleAreaItem {
	padding-bottom: 12px;  /* spacing after each people div */
}

.photo {
	width: 205px;
	text-align: center;
	float: left;  /* Pack photo item on left side */
	margin: 0px 10px 5px 0px;  /* Margin between photo's right side and bottom side */
	border-radius: 6px;
}

.tags {
	height: 150px;
}
.tags li {
	display: block;
	font-size: 11px;  /* Focus lists */
	font-weight: 300;
	line-height: 12px;
	padding-top: 8px;
/*	font-size: 12px;
	font-weight: bold;*/
}
.tags li a {
	color: #149fcd;
}
.tags li a:hover {
	opacity: 0.6;
}

.social {

	padding: 20px 0px 0px 10px;
}


h4.small {
	font-size: 32px;	
}

h5.small {
	margin: 0px;
	font-size: 16px;
	font-variant: small-caps;
	width: 205px;
}




@media (min-width: 1200px) {
	.photo, h5 { 
		width: 230px; 
	}
	h4.small {
		font-size: 22px;
	}
}

@media (max-width: 900px) {
	
	.photo, h5.small { width: 148px; }
	
	h4.small {
		font-size: 18px;
	}
	
	.tags {
		height: 95px;
	}
	.tags li {
		font-size: 9px;
		padding-left: 131px;
	}	
	.social {
		margin-top: 0px;
		padding-top: 0px;
		width: 60px;
		float: right;
	}
}

@media (max-width: 767px) {
	.peopleAreaItem {
		width: 300px;
		margin: auto;
	}
	h4.small {
		font-size: 18px;
	}
}

@media (max-width: 480px) {
	h4.small {
		margin: auto;
		font-size: 14px;
	}
	.peopleAreaItem {
	    width: 100%;
	}
	.photo {
		width: 65%;
	}
	.tags {
		height: 111px;
	}
}
