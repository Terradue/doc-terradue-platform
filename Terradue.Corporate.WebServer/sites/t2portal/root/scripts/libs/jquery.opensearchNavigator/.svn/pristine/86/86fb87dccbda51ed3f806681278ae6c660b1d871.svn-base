.osn-mapContainer {
	position: relative;
}

.osn-map {
	height: 100%;
}

/* search form */

.osn-searchForm {
	width: 210px;
	height: 185px;
	padding: 15px;
}

.osn-innerShadow {
	position: absolute;
	left: 0px;
	right: 0px;
	top: 0px;
	bottom: 0px;
	box-shadow: inset 0 0 10px #555;
	-moz-box-shadow: inset 0 0 10px #555;
	pointer-events: none;
}

/* loader */

.osn-loader {
	position: absolute;
	z-index: 10000;
	left: 50%;
	font-size: 12px;
	font-weight: bolder;
	color: #888;
	display: none;
	top: 10px;
	text-align: center;
}

.osn-loader i {
	font-size: 30px;
	line-height: 30px;
}

/* mode switcher */
.osn-modeSwitcher {
	position: absolute;
	z-index: 10000;
	right: 50%;
	bottom: 10px;
	margin-right: -87px;
}
.osn-modeSwitcher .navigationModeBtn {
	-webkit-border-radius: 14px 0 0 14px;
	-moz-border-radius: 14px 0 0 14px;
	border-radius: 14px 0 0 14px;
	margin-right: -1px;
}
.osn-modeSwitcher .selectionModeBtn {
	-webkit-border-radius: 0 14px 14px 0;
	-moz-border-radius: 0 14px 14px 0;
	border-radius: 0 14px 14px 0;
	margin-left: -1px;
}

.osn-modeSwitcher a.disabled:hover {
	cursor: pointer;
	opacity: initial;	
}
.osn-modeSwitcher a.btn-info:hover {
	cursor: default;
}

/* popup */

.osn-popup-title {
	font-size: 14px;
	margin: 0px;
}
.osn-popup-title a {
	color: #0088cc;
}

.osn-popup-content p {
	margin: 0px 0px 10px 0px !important;	
}
.osn-popup-content img {
	float: left;
	clear: left;
	margin-right: 10px;
	margin-bottom: 10px;
	border: none;
	border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	box-shadow: 0px 0px 11px black;
}

.osn-popup-content img:hover {
	opacity: 0.7;
}

.osn-popup-icon {
	position: absolute;
	top: -10px;
	left: -10px;
	background-color: white;
	border-radius: 100%;
	padding: 2px;
	margin: 0px;
	width: 23px;
	text-align: center;
	color: grey;
}

.clearBoth {
	clear: both;
}

.osn-json {
	minWidth: 50%;
}

